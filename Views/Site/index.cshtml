@model List<Termek.Models.Produto>

@{
  Layout = "_LayoutSite";
}

<form asp-controller="site" asp-action="buscar" method="get">
  <div class="row">
    <div class="col-sm-10">
      <input type="text" name="busca" class="form-control" placeholder="Pesquisar..">
    </div>
    <div class="col-sm-2">
      <button type="submit" class="btn btn-primary ">
        Pesquisar
      </button>
    </div>  
  </div>
</form>

<hr />


<div class="row">

@foreach(var item in Model)
{
  <div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
      <a href="#"><img class="card-img-top" src="/@item.Foto" alt=""></a>
      <div class="card-body">
        <h4 class="card-title">
          <a href="#">@item.Modelo</a>
        </h4>
        <h5>@item.Valor.ToString("C")</h5>
        <p class="card-text">
          @item.Marca @item.Modelo <br />
          @item.Descricao
        </p>
        <button class="btn btn-success btn-block">Comprar</button>
      </div>
      <div class="card-footer">
        
        <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
      </div>
    </div>
  </div>
}

</div>
<!-- /.row -->